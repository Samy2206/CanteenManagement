<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/pseudo1"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/mainPrimaryDarkColor"
        >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/txtBillName"
            />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BillNumber"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/txtBillNumber"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/txtBillAmount"
            android:paddingLeft="10sp"
        />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:text="Online"
                android:textSize="20sp"
                android:paddingRight="10sp"
                android:textColor="@color/black"
                android:id="@+id/txtBillMode"
                android:paddingLeft="10sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and time"
            android:id="@+id/txtBillDateTime"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pseudo1"
        android:id="@+id/txtBillItems"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:background="@color/mainPrimarycolor"
    />
</RelativeLayout>