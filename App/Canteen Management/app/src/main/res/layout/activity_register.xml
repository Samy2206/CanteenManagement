<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"

    android:background="#D39CF4FB"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/signup_icon"
    />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/mainAccentColor"
        android:elevation="11dp"
        android:textColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D39CF4FB"
            android:padding="10dp"
            android:textColor="@color/black"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/txtName"
            android:textColorHint="@color/hintColor"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/baseline_person_4_24"
            android:drawablePadding="40dp"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/txtEmail"
                android:textColorHint="@color/hintColor"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="40dp"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                android:id="@+id/txtPhoneNo"
                android:textColorHint="@color/hintColor"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="40dp"
                android:inputType="number"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/txtPassword"
                android:textColorHint="@color/hintColor"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="40dp"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Position"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_group_24"
                    android:drawablePadding="40dp"
                />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerView"
                />

            </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@color/mainAccentColor"
            android:layout_gravity="end"
            android:text="Register"
            android:id="@+id/btnRegister"
        />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>